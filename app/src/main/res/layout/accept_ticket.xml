<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/backarrow"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        app:srcCompat="@drawable/backarrow" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Ticket Information"
        android:textColor="#403E3E"
        android:textSize="28dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="111dp">

        <ImageView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/student1" />

        //changed to editText

        <TextView
            android:id="@+id/illustrate"
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Zihao Chen"
            android:textColor="#3E3D3D"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/search"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape"
        android:backgroundTint="#BCA8C6A0"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:letterSpacing="0.1"
        android:maxLines="1"
        android:padding="5dp"
        android:text="CSE110"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tutorPreferences"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center|start"
        android:text="        Meeting Preferences"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/empty"
            android:layout_width="41dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/empty1"
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        //changed to EditText

        <TextView
            android:id="@+id/meeting_preference"
            android:layout_width="178dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:backgroundTint="#BCA8C6A0"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:maxLines="1"
            android:padding="5dp"
            android:text="Offline Tutoring"
            android:textColor="#555555"
            android:textSize="16sp" />

    </LinearLayout>


    //Tutor Type deleted


    <TextView
        android:id="@+id/Time_Preference"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_marginTop="10sp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center|left"
        android:text="        Time Preference"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/empty4"
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/Time_Slot"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/shape"
            android:backgroundTint="#BCA8C6A0"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:letterSpacing="0.1"
            android:maxLines="1"
            android:padding="5dp"
            android:text="30 Minutes"
            android:textColor="#555555"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/empty5"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/empty7"
            android:layout_width="14dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>


    <TextView
        android:id="@+id/comment"
        android:layout_width="278dp"
        android:layout_height="121dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape1"
        android:backgroundTint="#EAE9E9"
        android:fontFamily="@font/poppins_bold"
        android:gravity="left|center_vertical"
        android:hint="Want to leave comments to your tutor?"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="5dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/AcceptTicket"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape1"
        android:fontFamily="@font/poppins_bold"
        android:hint="Accept Ticket"
        android:letterSpacing="0.1"
        android:maxLines="1"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="#555555"
        android:textSize="16sp" />


</LinearLayout>
